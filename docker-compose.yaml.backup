services:
  database:
    image: mysql:latest
    container_name: vault-database
    restart: always
    environment:
      MYSQL_DATABASE: ${DB_NAME}
      MYSQL_USER: ${DB_USER}
      MYSQL_PASSWORD: ${DB_PASSWORD}
      MYSQL_ROOT_PASSWORD: ${DB_ROOT_PASSWORD}
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost"]
      timeout: 5s
      retries: 5
      start_period: 60s
    volumes:
      - database_data:/var/lib/mysql
    networks:
      - vault

  php:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: vault-php
    restart: always
    ports:
      - "9000:9000"
    volumes:
      - ./:/var/www/html
    depends_on:
      database:
        condition: service_healthy
    networks:
      - vault

  web:
    image: nginx:alpine
    container_name: vault-web
    restart: always
    environment:
      VIRTUAL_HOST: ${VIRTUAL_HOST}
    ports:
      - "8080:80"
    volumes:
      - ./php.ini:/usr/local/etc/php/conf.d/99-php.ini
      - ./:/var/www/html
      - ./nginx.conf:/etc/nginx/conf.d/default.conf:ro
    working_dir: /var/www/html
    depends_on:
      - php
    networks:
      - vault

networks:
  vault:

volumes:
  database_data:
  nginx_certs:
  nginx_vhost:
  nginx_html:
